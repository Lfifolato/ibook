@model ibook.Models.Livros

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1 class="text-danger">Delete</h1>


<h3>Tem certeza de que deseja excluir?</h3>


<div>
    <h4>Livros</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genero)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genero)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.quantPag)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.quantPag)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.datalancamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.datalancamento)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button class="btn btn-danger btn-icon-split">
            <span class="icon text-white">
                <i class="fas fa-trash-alt"></i>
            </span>
            <span class="text">Delete</span>
        </button>
        <a class="btn btn-danger btn-icon-split" asp-action="Index">
            <span class="icon text-white">
                <i class="fas fa-arrow-circle-left"></i>
            </span>
        </a>
    </form>
</div>
